{ 
    "manifest_version": 3, 
    "name": "Canvas Quiz Scraper", 
    "version": "1.0", 
    "permissions": ["scripting", "activeTab", "storage"], 

    "background": {
        "service_worker": "background.bundle.js", 
        "type": "module"
    },

    "host_permissions": [
        "https://generativelanguage.googleapis.com/",
        "https://*.canvas.edu/*" 
    ],
    "action": { "default_popup": "MainMenu.html" }, 
    "content_scripts": [ { "matches": ["<all_urls>"], 
    "js": ["popup.js"], "type": "module" } ], 
    
    "web_accessible_resources": [ 
        { "resources": [ 
            "classes/FormClasses/*.js", 
            "classes/QuestionClasses/*.js", 
            "classes/QuizClass/*.js",
            "classes/Controller/*.js",
            "classes/aiClass/*.js"
        ], 
        "matches": ["<all_urls>"] } 
    ] 
}

